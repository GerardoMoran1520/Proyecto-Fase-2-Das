@model IEnumerable<Universidad.Models.Domain.Help>
@{
}

<div class="tbl-container">
    <center>
        <h2><b>Todas Las Consultas</b></h2>
    </center>

    <table>
        <tr>
            <th>Nombre</th>
            <th>Accion</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.HelpName</td>
                <td>
                    <a href="/Help/Edit?id=@item.Id" class="btnn btn-defaultt"><i class="fa fa-edit"></i></a>
                    <a onclick="return window.confirm('Estas seguro de eliminar la consulta?')" href="/Help/Delete?id=@item.Id" class="btnn btn-dangerr"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }

    </table>
    <br />
    <br />
    <center>
        <a href="/Help/Add" class="btnn btn-secc">Regresar</a>
    </center>
</div>