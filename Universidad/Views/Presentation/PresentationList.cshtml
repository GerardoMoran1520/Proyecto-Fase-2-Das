@model IEnumerable<Universidad.Models.Domain.Presentation>
@{
}

<div class="tbl-container">
    <center>
        <h2><b>Todos Los Tipos De Noticias</b></h2>
    </center>

    <table>
        <tr>

            <th>Presentacion</th>
            <th>Accion</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>

                <td><b>Mision:</b>  @item.Mision</td>
                <td>
                    <a href="/Presentation/Edit?id=@item.Id" class="btnn btn-defaultt"><i class="fa fa-edit"></i></a>
                    <a onclick="return window.confirm('Estas seguro de eliminar la Vision?')" href="/Presentation/Delete?id=@item.Id" class="btnn btn-dangerr"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
            <tr>
                <td><b>Vision:</b>@item.Vision</td>
                <td>
                    <a href="/Presentation/Edit?id=@item.Id" class="btnn btn-defaultt"><i class="fa fa-edit"></i></a>
                    <a onclick="return window.confirm('Estas seguro de eliminar la Vision?')" href="/Presentation/Delete?id=@item.Id" class="btnn btn-dangerr"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
            
        }

    </table>
    <br />
    <br />
    <center>
        <a href="/Presentation/Add" class="btnn btn-secc">Regresar</a>
    </center>
</div>