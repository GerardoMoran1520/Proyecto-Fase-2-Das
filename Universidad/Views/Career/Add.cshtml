@model Universidad.Models.Domain.Career
@{
}
<center>
    <form class="w-40" asp-action="Add" method="post" enctype="multipart/form-data">
        <h2 class="pb-10"><b>Agregar Carrera</b></h2>


        <div class="input-container">
            <label asp-for="Profession" class="w-40"><b>Nombre De La Carrera</b></label>
            <input type="text" class="input" asp-for="Profession">
        </div>
        <div class="message-box pd-x-28 error">
            <span asp-validation-for="Profession"> </span>
        </div>
        <div class="input-container">
            <label asp-for="Profession" class="w-40"><b>Imagen</b></label>
            <input type="file" asp-for="ImageFile">
        </div>
        <div class="message-box pd-x-28 error">
            <span asp-validation-for="ImageFile"> </span>
        </div>

        <div class="input-container">
            <label asp-for="Categorys" class="w-40"><b>Tipo De Carrera</b></label>
            <select asp-items="Model.CategoryList" class="input" asp-for="Categorys" multiple>
                <option value="">------------------SELECCIONA UNA CARRERA------------------</option>
            </select>
        </div>
        <div class="message-box pd-x-28 error">
            <span asp-validation-for="Categorys"> </span>
        </div>

        <div class="input-container">
            <label asp-for="Descripcion" class="w-40"><b>Descripción De La Carrera</b></label>
            <input type="text" class="input" asp-for="Descripcion">
        </div>
        <div class="message-box pd-x-28 error">
            <span asp-validation-for="Descripcion"> </span>
        </div>

        @if (TempData["msg"] != null)
        {
            <div class="alert mb-1">
                @TempData["msg"]
            </div>
        }
        <br />
        <br />
        <center>
            <button class="btnn btn-defaultt" type="submit">Guardar</button>
            

        </center>
    </form>
</center>