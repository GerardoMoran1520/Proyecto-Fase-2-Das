@model Universidad.Models.Domain.Career
@{
}
<center>
    <form class="w-40" asp-action="Edit" method="post" enctype="multipart/form-data">
        <h2 class="pb-10">ACTUALIZAR CARRERA</h2>
        <input type="hidden" class="input" asp-for="Id">
        <input type="hidden" class="input" asp-for="CareerImage">

        <div class="input-container">
            <label asp-for="Profession" class="w-40">Nombre De La Carrera</label>
            <input type="text" class="input" asp-for="Profession">
        </div>
        <div class="message-box pd-x-28 error">
            <span asp-validation-for="Profession"> </span>
        </div>

        <div class="input-container">
            <label asp-for="Profession" class="w-40">Imagen</label>
            <input type="file" asp-for="ImageFile">
        </div>
        <div class="message-box pd-x-28 error">
            <span asp-validation-for="ImageFile"> </span>
        </div>

        <div class="input-container">
            <label asp-for="Categorys" class="w-40">Genero</label>
            <select asp-items="Model.MultiCategoryList" class="input" asp-for="Categorys" multiple>
                <option value="">------------------SELECCIONA UNA CARRERA------------------</option>
            </select>
        </div>
        <div class="message-box pd-x-28 error">
            <span asp-validation-for="Categorys"> </span>
        </div>


        <div class="input-container">
            <label asp-for="Descripcion" class="w-40">Descripción De La Carrera</label>
            <input type="text" class="input" asp-for="Descripcion">
        </div>
        <div class="message-box pd-x-28 error">
            <span asp-validation-for="Descripcion"> </span>
        </div>



       

        @if (TempData["msg"] != null)
        {
            <div class="alert mb-1">
                @TempData["msg"]
            </div>
        }

        <center>
            <button class="btnn btn-defaultt" type="submit">Editar</button>
           

        </center>

    </form>
</center>



